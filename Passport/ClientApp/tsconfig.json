{
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "baseUrl": ".",
    "paths": {
      "passport": ["src"],
      "passport/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "webpack.config.js",
    "scripts",
    "acceptance-tests",
    "postcss.config.js",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
